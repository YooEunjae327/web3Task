<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <link href="./css/admin.css" rel="stylesheet" />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <div
      class="d-flex justify-content-center"
      style="margin-top: 210px; margin-bottom: 20px"
    >
      <!-- <button type="button" class="btn btn-outline-primary">수정</button> -->
      <a
        type="button"
        href="/kiosk/registration"
        class="btn btn-outline-success"
        >등록하기</a
      >
      <!-- <button type="button" class="btn btn-outline-danger">삭제</button> -->
      <a type="button" href="/kiosk" class="btn btn-outline-dark">
        메인페이지 가기
      </a>
    </div>

    <!-- <%= JSON.stringify(data) %> <% console.log(data.length) %> -->

    <div class="container">
      <div class="card-deck">
        <% for(let i = 0; i < data.length; i++ ) { %>
        <div class="card" id="card">
          <img
            class="card-img-top"
            src=<%= `http://localhost:3000/image/${data[i].img}` %>
            height="100%" alt="Card image cap" 
          />
          <div class="card-body">
            <h5 class="card-title"><%= data[i].name %></h5>
            <div style="margin-bottom: 0px">
              <p class="card-text">
                <%= data[i].kind %> <%= data[i].price %>원
              </p>
              <p class="card-text">남는 재고량 : <%= data[i].number %></p>
            </div>
          </div>
          <div class="buttonArea">
            <a type="button" style="padding-top: 25px;" class="btn btn-outline-dark btn1" href=<%= `/kiosk/update/${data[i].id}` %>>
              수정
            </a>
            <form class="btn btn-outline-dark btn2" method="get" action=<%= `/kiosk/delete/${data[i].id}` %>>
              <button type="submit" class=" btn " style="margin-top: 10px;" >
              삭제
              </button>
            </form>
          </div>
        </div>
        <% } %>
      </div>
    </div>



    <style>
      .container {
        width: 80%;
      }
      .card {
        margin: 20px;
        height: 150px;
        display: flex;
        flex-direction: row;
      }
      .card-img-top {
        height: 150px;
        width: 150px;
      }

      .buttonArea {
        display: flex;
        flex-direction: column;
      }

      .btn {
        height: 50%;
      }
      .btn1 {
        border-radius: 0px 5px 0px 0px;
      }
      .btn2 {
        border-radius: 0px 0px 5px 0px;
      }
    </style>
  </body>
</html>
